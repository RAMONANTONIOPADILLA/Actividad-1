@page "/actorpage"
@using Actores.Data
@using Actores.Pages.Componentes

<div class="actor-list">
    <h2 class="title">Bienvenidos al perfil actores</h2>
    <div class="actor-container">
        @if (ActorList != null)
        {
            @foreach (var actor in ActorList)
            {
                <ActorCard Actor="actor" />
            }
        }
        else
        {
            <p>Cargando actores...</p>
        }
    </div>
</div>

@code {
    List<Actor> ActorList;

    protected override void OnInitialized()
    {
        if (ActorList == null)
        {
            ActorList = ObtenerListaDeActores();
        }
    }

    List<Actor> ObtenerListaDeActores()
    {
        // Aquí debes obtener y devolver la lista de actores sin duplicados
        return new List<Actor>
        {
            new Actor { Nombre = "Victor German", Biografia = "Víctor es un actor talentoso conocido por su versatilidad y carisma en la pantalla, destacándose por interpretaciones cautivadoras y memorables en diversas producciones cinematográficas y televisivas.", Foto = "/img/victor-german.jpg" },

            new Actor { Nombre = "Yunior Padilla", Biografia = "Yunior, actor destacado por su energía magnética y habilidades expresivas, ofrece actuaciones cautivadoras que cautivan al público con su presencia carismática y versatilidad.", Foto = "/img/yunior-padilla.jpg" },
        };
    }
}
