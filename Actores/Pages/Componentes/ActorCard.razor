@using Actores.Data

<div class="actor-card">
    <img src="@Actor.FotoUrl" class="card-img-top" alt="Foto del actor" />
    <div class="card-body">
        <h5 class="card-title">@Actor.Nombre</h5>
        <p class="card-text">@Actor.Biografia</p>
        <a href="#" class="btn btn-primary">Mas Detalles del Actor</a>
    </div>
</div>

@code {
    [Parameter]
    public Actor Actor { get; set; }
}
